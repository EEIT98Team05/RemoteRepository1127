<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="showArticles" class="org.springframework.web.servlet.view.RedirectView">
		<property name="contextRelative" value="true"></property>
		<property name="url" value="/forumjsp/showArticle.jsp"></property>
	</bean>

	<bean id="articleDetail"
		class="org.springframework.web.servlet.view.InternalResourceView">
		<property name="url" value="/forumjsp/articleDetail.jsp"></property>
	</bean>

	<bean id="postArticle"
		class="org.springframework.web.servlet.view.InternalResourceView">
		<property name="url" value="/forumjsp/postArticle.jsp"></property>
	</bean>
</beans>
